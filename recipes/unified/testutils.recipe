class TestUtils(CPackageRecipe):
    name = 'testutils'
    version = 'tip'

    plat = 'centos'
    platver = '6'
    embedded = False
    encapsulated = True

    if plat == 'rpath':
        buildRequires = [
            'python:devel',
            'epdb:python',
          ]
    elif plat == 'centos' and encapsulated:
        if embedded:
            buildRequires = [
                'python-conary:devel',
                'epdb-conary:python',
                ]
        else:
            buildRequires = [
                'python-devel:rpm',
                'python-epdb:python',
                ]
    else:
        assert False

    def setup(r):
        if r.encapsulated:
            r.rpathSetup(embedded=r.embedded)
        else:
            r.macros.pyinc = '%(includedir)s/python%(pyver)s'
            r.macros.sitepkgs = '%(libdir)s/python%(pyver)s/site-packages'

        r.addMercurialSnapshot('http://scc.eng.rpath.com/infra/testutils')
        r.MakeInstall('sitedir=%(sitepkgs)s PYINCLUDE=%(pyinc)s')
        r.Install('scripts/coverage_dump.py', '%(bindir)s/coverage_dump',
                mode=0755)
